package javamainl;
import java.util.Scanner;
import java.util.Arrays;

/* 재귀 - 특정 함수 내에서 자기 자신을 다시 호출하여 문제를 해결해 나가는 함수. 
 * 문제를 해결하기 위해 원래 범위의 문제에서 더 작은 범위의 하위 문제를 먼저 해결함으로써 원래 문제를 해결해나감.
 * 재귀함수는 자기 자신을 계속 호출하는 방식이기 때문에 반드시 종료 구간이 되는 Base case를 생각해야함
 * 
 */
class solution{
	Scanner sc = new Scanner(System.in);
	public int function(int n) {
		int i;
		if(n == 1) {
			return 1;
		}
		else {
			i = n*(function(n-1));
			
			
			}
		
		return i;
		}

	}

	
public class javapractice {
	
	public static void main(String[] args) {
	solution c1 = new solution();
	System.out.println(c1.function(10));
	}   
	
}

